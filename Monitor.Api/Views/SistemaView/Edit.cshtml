@model Monitor.Domain.ViewModels.Sistema.DetalhesSistemaViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Sistema do Monitoramento</h1>

<h3>Editar</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Handle" />
            <input type="hidden" asp-for="HandleAmbiente" value="@ViewBag.handleAmbiente"/>
            <div class="form-group">
                <label class="control-label">Ambiente</label>
                <input name="nomeAmbiente" class="form-control" value="@ViewBag.nomeAmbiente" type="text" readonly="true"/>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <input asp-for="Cliente" class="form-control" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonitoramentoAtivo" class="control-label"></label>
                <input asp-for="MonitoramentoAtivo" class="form-control" />
                <span asp-validation-for="MonitoramentoAtivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlConsultaProcessos" class="control-label"></label>
                <input asp-for="UrlConsultaProcessos" class="form-control" />
                <span asp-validation-for="UrlConsultaProcessos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlConsultaInformacoes" class="control-label"></label>
                <input asp-for="UrlConsultaInformacoes" class="form-control" />
                <span asp-validation-for="UrlConsultaInformacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-handleAmbiente="@ViewBag.handleAmbiente" asp-route-nomeAmbiente="@ViewBag.nomeAmbiente">Voltar para a lista de ambientes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
