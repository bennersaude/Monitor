@model Monitor.Domain.ViewModels.Endpoint.IncluirEndpointViewModel

@{
    ViewData["Title"] = "Novo";
}

<h1>Sistema do Monitoramento</h1>

<h3>Novo</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HandleSistema" value="@ViewBag.handleSistema"/>
            <div class="form-group">
                <label class="control-label">Sistema</label>
                <input name="nomeSistema" class="form-control" value="@ViewBag.nomeSistema" type="text" readonly="true"/>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-handleSistema="@ViewBag.handleSistema" asp-route-nomeSistema="@ViewBag.nomeSistema">Voltar para a lista de sistemas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
